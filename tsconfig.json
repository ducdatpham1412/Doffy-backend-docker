{
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",

        "outDir": "chat/build",
    },
    "include": ["chat"],
    "exclude": ["node_modules"],
}